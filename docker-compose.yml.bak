version: '3.8'

services:
  postgres:
    build: ./services/postgres
    container_name: ucas-postgres
    environment:
      POSTGRES_DB: ucas_db
      POSTGRES_USER: ucas_user
      POSTGRES_PASSWORD: ucas_password_123
    volumes:
      - postgres_data:/var/lib/postgresql/data
    ports:
      - "5432:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ucas_user -d ucas_db"]
      interval: 10s
      timeout: 5s
      retries: 5
    restart: unless-stopped

  redis:
    image: redis:7-alpine
    container_name: ucas-redis
    command: redis-server --appendonly yes --requirepass ucas_redis_pass
    volumes:
      - redis_data:/data
    ports:
      - "6379:6379"
    healthcheck:
      test: ["CMD", "redis-cli", "--raw", "incr", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
    restart: unless-stopped

  api-gateway:
    build: ./services/api-gateway
    container_name: ucas-api-gateway
    environment:
      REDIS_HOST: redis
      REDIS_PASSWORD: ucas_redis_pass
    ports:
      - "8000:8000"
    depends_on:
      redis:
        condition: service_healthy
      postgres:
        condition: service_healthy
    restart: unless-stopped

  orchestrator:
    build: ./services/orchestrator
    container_name: ucas-orchestrator
    environment:
      - DATABASE_URL=postgresql://ucas_user:ucas_password_123@postgres:5432/ucas_db
    ports:
      - "8001:8001"
    volumes:
      - ucas-categorizers-data:/data
      - ./config:/app/config:ro 
    depends_on:
      postgres:
        condition: service_healthy
      tags-layer:
        condition: service_healthy
      xgboost-layer:
        condition: service_healthy
      llm-layer:
        condition: service_healthy
      embeddings-service:
        condition: service_healthy
      rag-service:
        condition: service_healthy  
    restart: unless-stopped

  tags-layer:
    build: ./services/tags-layer
    container_name: ucas-tags-layer
    ports:
      - "8010:8010"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8010/health"]
      interval: 10s
      timeout: 5s
      retries: 5
    restart: unless-stopped

  xgboost-layer:
    build: ./services/xgboost-layer
    container_name: ucas-xgboost-layer        
    volumes:
      - models_data:/data/models
    ports:
      - "8020:8020"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8020/health"]
      interval: 10s
      timeout: 5s
      retries: 5
    restart: unless-stopped

  ollama:
    image: ollama/ollama:latest
    container_name: ucas-ollama
    volumes:
      - ollama_data:/root/.ollama
    ports:
      - "11434:11434"
    restart: unless-stopped
    devices:
      - nvidia.com/gpu=all
    environment:
      - OLLAMA_NUM_GPU=1
      - OLLAMA_MAX_MEMORY=85899345920

  llm-layer:
    build: ./services/llm-layer
    container_name: ucas-llm-layer
    depends_on:
      - ollama
    environment:
      - OLLAMA_URL=http://ollama:11434
    ports:
      - "8030:8030"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8030/health"]
      interval: 10s
      timeout: 5s
      retries: 5
    restart: unless-stopped

  hil-layer:
    build: ./services/hil-layer
    container_name: ucas-hil-layer
    environment:
      - DATABASE_URL=postgresql://ucas_user:ucas_password_123@postgres:5432/ucas_db
    ports:
      - "8040:8040"
    depends_on:
      postgres:
        condition: service_healthy
    restart: unless-stopped

  evaluator:
    build: ./services/evaluator
    container_name: ucas-evaluator
    ports:
      - "8060:8060"
    environment:
      - DATABASE_URL=postgresql://ucas_user:ucas_password_123@postgres:5432/ucas_db
    depends_on:
      postgres:
        condition: service_healthy
      llm-layer:
        condition: service_started
    volumes:
      - ./config:/app/config:ro
    restart: unless-stopped

  embeddings-service:
    build: ./services/embeddings-service
    container_name: ucas-embeddings
    ports:
      - "8050:8050"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8050/health"]
      interval: 10s
      timeout: 5s
      retries: 15
    restart: unless-stopped

  dashboard-admin:
    build: ./services/dashboard-admin
    container_name: ucas-dashboard-admin
    environment:
      - ORCHESTRATOR_URL=http://orchestrator:8001
      - EVALUATOR_URL=http://evaluator:8060
      - DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
      - CONFIG_PATH=/app/config/config.yaml
    ports:
      - "8080:8080"
    volumes:
      - ./config:/app/config:ro
    depends_on:
      - orchestrator
      - postgres
    restart: unless-stopped

  dashboard-hil:
    build: ./services/dashboard-hil
    container_name: ucas-dashboard-hil
    environment:
      - HIL_LAYER_URL=http://hil-layer:8040
      - ORCHESTRATOR_URL=http://orchestrator:8001
      - CONFIG_PATH=/app/config/config.yaml
    ports:
      - "8081:8081"
    volumes:
      - ./config:/app/config:ro
    depends_on:
      - hil-layer
    restart: unless-stopped

  rag-service:
    build: ./services/rag-service
    container_name: ucas-rag-service
    environment:
      - DATABASE_URL=postgresql://ucas_user:ucas_password_123@postgres:5432/ucas_db
      - EMBEDDINGS_SERVICE_URL=http://embeddings-service:8050
    ports:
      - "8070:8070"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8070/health"]
      interval: 10s
      timeout: 5s
      retries: 5
    depends_on:
      postgres:
        condition: service_healthy
      embeddings-service:
        condition: service_started
    restart: unless-stopped

networks:
  default:
    name: ucas_network

volumes:
  postgres_data:
  redis_data:
  ollama_data:
  models_data:
  ucas-categorizers-data:
